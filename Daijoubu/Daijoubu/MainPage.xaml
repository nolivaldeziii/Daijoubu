<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Daijoubu"
             x:Class="Daijoubu.MainPage"
             Title="Daijoubu"
             BackgroundColor="#DFDFDF"
             >
  
  <StackLayout Orientation="Vertical" 
    Padding="0,-50,0,0">
    <RelativeLayout>
      <!-- header image with text -->

      <Image x:Name="image_homepage_header"
             Source="homepage_header"
             Aspect="AspectFill"
             
             />

      <Label x:Name="label_homepage_header"
             Text="Welcome to だいじょうぶ"
             
             HorizontalOptions="Center"
             TextColor="Red"
             BackgroundColor="Green"
             FontSize="25"
             
             RelativeLayout.YConstraint =
             "{ConstraintExpression Type=RelativeToParent,
                             Property=Height,
                             Factor=0,
                             Constant=-50}" />
    </RelativeLayout>
  
    <ListView x:Name="listview_homepage" />
  </StackLayout>


</ContentPage>