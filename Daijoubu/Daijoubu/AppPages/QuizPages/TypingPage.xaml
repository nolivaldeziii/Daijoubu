<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daijoubu.AppPages.QuizPages.TypingPage"
             Title="Typing Module"
             Style="{StaticResource TypicalContentPage}">
  <ScrollView>
    <StackLayout>

      <Frame Style="{StaticResource QuestionCardOuterFrame}">
        <StackLayout>
          <Frame Style="{StaticResource QuestionCardInnerFrame}">
            <Label x:Name="label_question"
                 Text="Getting Ready ..."
                 Style="{StaticResource SingleQuestionLabel}"/>
          </Frame>
        </StackLayout>
      </Frame>

      <Entry x:Name="textentry_answer"
             Placeholder="Type your answer"/>

      <Label Text="(Type in hiragana)" />

      <Button x:Name="btn_submit"
              Text="Submit" />

    </StackLayout>
  </ScrollView>
</ContentPage>