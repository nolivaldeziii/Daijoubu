<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daijoubu.AppPages.QuizPages.MultipleChoicePageN4"
             Title="Choice Module N4"
             x:Name="MultipleChoicePageN4"
             AutomationId="auto_MultipleChoicePageN4"
             Style="{StaticResource TypicalContentPage}">


  <StackLayout>

    <Frame Style="{StaticResource QuestionCardOuterFrame}">
      <Frame Style="{StaticResource QuestionCardInnerFrame}">
        <Label x:Name="label_question"
             Text="Getting Ready ..."
             Style="{StaticResource SingleQuestionLabel}" />
      </Frame>
    </Frame>

    <Grid VerticalOptions="FillAndExpand">
      <Frame Style="{StaticResource AnswerButtonFrame}"
             Grid.Column="0">
        <Button x:Name="btn_choice1"
                AutomationId="auto_btn_choice1"
                Text="*"
                Style="{StaticResource MultipleChoiceButtonStyle}"/>
      </Frame>
      <Frame Style="{StaticResource AnswerButtonFrame}"
             Grid.Column="1">
        <Button x:Name="btn_choice2"
                AutomationId="auto_btn_choice2"
                Text="*"
                Style="{StaticResource MultipleChoiceButtonStyle}"/>
      </Frame>
    </Grid>
    <Label x:Name="lbl_furigana" />
    <Label x:Name="lbl_meaning" />
    <Grid VerticalOptions="FillAndExpand">

      <Frame Style="{StaticResource AnswerButtonFrame}"
              Grid.Column="0">
        <Button x:Name="btn_choice3"
                AutomationId="auto_btn_choice3"
                Text="*"
                Style="{StaticResource MultipleChoiceButtonStyle}"/>
      </Frame>

      <Frame Style="{StaticResource AnswerButtonFrame}"
              Grid.Column="1">
        <Button x:Name="btn_choice4"
                AutomationId="auto_btn_choice4"
                Text="*"
                Style="{StaticResource MultipleChoiceButtonStyle}"/>
      </Frame>
    </Grid>


    <Label x:Name="lbl_debug_txt"
           Style="{StaticResource DebugLabels}" />
    <Label x:Name="lbl_debug_ans"
           AutomationId="auto_lbl_debug_ans"
           Style="{StaticResource DebugLabels}" />
    <Label x:Name="lbl_nextview"
           Style="{StaticResource DebugLabels}" />
    <Label x:Name="lbl_percent"
           Style="{StaticResource DebugLabels}" />

  </StackLayout>

</ContentPage>