<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daijoubu.AppPages.ProfilePage"
             Title="Profile"
             Style="{StaticResource TypicalContentPage}">

  <!--<StackLayout>
    <Button x:Name="btn_hiragana_achivements"
            Text="View Hiragana Achivements" />
    <Button x:Name="btn_katakana_achivements"
            Text="View Katakana Achivements" />
    <Button x:Name="btn_vocabulary_achivements"
            Text="View Vocabulary Achivements" />
    <Button x:Name="btn_delete_data"
            Text="Delete User Data" />
  </StackLayout>-->

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
    </Grid.RowDefinitions>

    <Button x:Name="btn_hiragana_achivements"
            Text="View Hiragana Achievement"
            Grid.Row="0"/>
    <Button x:Name="btn_katakana_achivements"
            Text="View Katakana Achievement"
            Grid.Row="1"/>
    <Button x:Name="btn_vocabulary_achivements"
            Text="View Vocabulary Achievement"
            Grid.Row="2"/>
    <Button x:Name="btn_delete_data"
            Text="Delete User Data"
            Grid.Row="3"
            />
    <StackLayout Grid.Row="4">
    
      <ProgressBar x:Name="progress_deletion"
                 IsVisible="False"
                 Progress="0"
                 />
      <Label x:Name="lbl_prog_percent"
           Text="{Binding Progress, StringFormat='{0:0.00}', Source={x:Reference progress_deletion}}"
           FontSize="25"
           TextColor="Navy"
           HorizontalOptions="Center"
           VerticalOptions="End"
           Grid.Row="5"/>
    </StackLayout>
    
    
    
  </Grid>
  
</ContentPage>