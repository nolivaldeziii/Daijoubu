<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daijoubu.AppPages.QuizPage"
             Title="Quiz"
             Style="{StaticResource TypicalContentPage}">

  <Grid>
   
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="1*" />
    </Grid.RowDefinitions>

    <Button Grid.Row="0" Grid.Column="0"
            x:Name="btn_multiple"
            AutomationId="auto_btn_multiple"
            Text="Multiple Choice"
            Image="@drawable/multiple_choice"
            Style="{StaticResource BigButtons}" />
          
    <Button Grid.Row="0" Grid.Column="1"
            x:Name="btn_listen"
            Text="Listening"
            Image="@drawable/Listening_logo"
            Style="{StaticResource BigButtons}" />

    <Button Grid.Row="1" Grid.Column="0"
            x:Name="btn_typing"
            Text="Typing"
            Image="@drawable/FillBlank_logo"
            Style="{StaticResource BigButtons}" />

    <Button Grid.Row="1" Grid.Column="1"
            x:Name="btn_reading"
            Text="Reading"
            Image="@drawable/Reading_logo"
            Style="{StaticResource BigButtons}" />
  </Grid>
  
</ContentPage>